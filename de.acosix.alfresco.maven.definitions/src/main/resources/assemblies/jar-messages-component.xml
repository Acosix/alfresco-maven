<?xml version='1.0' encoding='UTF-8'?>
<component
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.3 http://maven.apache.org/xsd/component-1.1.3.xsd">
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/messages</directory>
			<outputDirectory>alfresco/messages/${messages.path}</outputDirectory>
			<includes>
				<include>**/*.properties</include>
			</includes>
			<filtered>true</filtered>
			<lineEnding>crlf</lineEnding>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/i18n-resources/messages</directory>
			<outputDirectory>alfresco/messages/${messages.path}</outputDirectory>
			<includes>
				<include>**/*.properties</include>
			</includes>
			<filtered>true</filtered>
			<lineEnding>crlf</lineEnding>
		</fileSet>
	</fileSets>
</component>
